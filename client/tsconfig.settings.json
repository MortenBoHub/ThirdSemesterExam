{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "**/*.js"
  ]
}